<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/FotoProfil"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/Photo_Grid"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        tools:src="@tools:sample/avatars">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/TeksName_Grid_Item"
                        android:layout_width="300dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center_vertical"
                        android:text="Name"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/Photo_Grid"
                android:layout_width="match_parent"
                android:layout_height="395dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/film" />

            <ProgressBar
                android:id="@+id/progressBar_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Photo_Grid"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="179dp"
                android:layout_marginEnd="172dp"
                android:layout_marginBottom="168dp"
                android:progress="@integer/google_play_services_version" />

            <LinearLayout
                android:id="@+id/layoutIcon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Photo_Grid"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_favorite_border_24" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/baseline_download_24" />

                <ImageView
                    android:id="@+id/btn_img_favorite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="220dp"
                    android:src="@drawable/baseline_bookmark_border_24"
                    tools:ignore="InvalidId" />

            </LinearLayout>

            <TextView
                android:id="@+id/Tekssuka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.598 suka"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_below="@id/layoutIcon"
                android:textColor="#000000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/Tekssuka">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/DeskripsiKuy"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
