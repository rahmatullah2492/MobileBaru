<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp">

    <TextView
        android:id="@+id/Text_Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:gravity="center_vertical"
        android:text="Nama"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="9dp"
        app:layout_constraintEnd_toStartOf="@+id/Text_Name"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />


    <ImageView
        android:id="@+id/Image_Post"
        android:layout_width="match_parent"
        android:layout_height="434dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Text_Deskripsi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="9dp"
        android:text="Deskripsi"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Image_Post" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/Text_Deskripsi"
        app:layout_constraintTop_toBottomOf="@+id/Image_Post">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/baseline_favorite_border_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="478dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="478dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_marginStart="245dp"
            android:src="@drawable/baseline_bookmark_border_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="369dp"
            tools:layout_editor_absoluteY="477dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
